source "https://rubygems.org"

# Use the latest compatible version of Jekyll for GitHub Pages
gem 'jekyll', '~> 3.9' # GitHub Pages is locked to 3.9.x

# Dependencies required for Ruby 3.x compatibility
gem 'rexml'
gem 'bigdecimal'
gem 'ostruct'
gem 'base64'
gem 'csv'
gem 'liquid'

# Ensure `jekyll-feed` matches the version required by GitHub Pages
gem 'jekyll-feed'
gem 'html-proofer'
gem 'mdl'

group :jekyll_plugins do
  gem 'github-pages'
  gem 'jekyll-sitemap'
  gem 'jekyll-seo-tag'
end
